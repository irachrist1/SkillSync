{
	"info": {
		"_postman_id": "a8f5b4a1-1b3a-4b1e-8b0a-9b8d7c6e3c2d",
		"name": "SkillSync API - Simplified Flow",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"health"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "2. Full Analysis",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"skills\": [\"html\", \"css\", \"javascript\"]\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/generate-full-analysis",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"generate-full-analysis"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
						"pm.test(\"Save first recommended skill\", function () {",
						"    const response = pm.response.json();",
						"    const firstSkill = response.recommendations.skillGaps[0].skill;",
						"    pm.environment.set(\"recommendedSkill\", firstSkill);",
						"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "3. Generate Course",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
                    "mode": "raw",
                    "raw": "{\n    \"target_skill\": \"{{recommendedSkill}}\",\n    \"level\": \"beginner\",\n    \"user_skills\": [\"html\", \"css\", \"javascript\"]\n}"
                },
				"url": {
					"raw": "{{baseUrl}}/generate-course",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"generate-course"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
						"pm.test(\"Response contains a course outline\", function () {",
						"    const response = pm.response.json();",
						"    pm.expect(response).to.have.property(\"course_outline\");",
						"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "4. Coach Chat",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
                    "mode": "raw",
                    "raw": "{\n    \"question\": \"What are the job prospects for someone with my skills?\",\n    \"role\": \"Career Coach\",\n    \"analysis\": {},\n    \"user_skills\": [\"html\", \"css\", \"javascript\"]\n}"
                },
				"url": {
					"raw": "{{baseUrl}}/coach-chat",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"coach-chat"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:7800"
		}
	]
}