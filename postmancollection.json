					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"target_skill\": \"python\",\n    \"level\": \"beginner\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/generate-course",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"generate-course"
					]
				}
			},
			"response": []
		},
		{
